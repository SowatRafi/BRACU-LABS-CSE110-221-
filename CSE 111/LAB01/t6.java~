import java.util.Scanner;
public class t6{
  public static void main(String args[]){
    Scanner sc = sc.nextInt();
    System.out.println("Enter a number");
    int n = sc.nextInt();
    for(int i=1; i<=n; i++){
      for(int s=1; s<=n-i; s++){
        System.out.print(" ");
        for(int j=1; j<=i; j++){
          System.out.print(j);
          
          for(int k=j-1; k<=i; k++){
            System.out.print(k);
          }
        }
      }
      System.out.println();
      
    }
  }
}